{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react"],
  "rules": {
    "no-fallthrough": "error",
    "eqeqeq": "error",
    "curly": "warn",
    "brace-style": ["error", "1tbs"],
    "quotes": ["off", "double"],
    "semi": ["error", "always"],
    "space-infix-ops": "error",
    "no-var": "error",
    "no-empty": "off",
    "prefer-const": "warn",
    "object-shorthand": "error",
    "no-unused-vars": "warn",
    "no-array-constructor": "error",
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
